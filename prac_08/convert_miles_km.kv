BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            on_text: app.calculate_conversion()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.update_miles(1)
            Button:
                text: 'Down'
                on_press: app.update_miles(-1)
    Button:
        text: 'Convert m to km'
        on_press: app.calculate_conversion()
    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)